<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 创建工厂连接 -->
    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61616" />
    </bean>

    <!--<bean id="pooledConnectionFactory" class="org.apache.activemq.pool.PooledConnectionFactory">-->
        <!--<property name="connectionFactory" ref="connectionFactory" />-->
    <!--</bean>-->

    <!-- activeMQ消息目标 队列 -->
    <bean id="defaultDestination" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg index="0" value="crawler.pubAndSub"></constructor-arg>
    </bean>

    <bean id="pubAndSubQueueDestination" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg index="0" value="crawler.pubAndSub"></constructor-arg>
    </bean>

    <!-- activeMQ消息目标 主题-->
    <!-- <bean id="rantzDestination" class="org.apache.activemq.command.ActiveMQTopic">-->
    <!--     <constructor-arg index="0" value="rantz.marketing.queue"></constructor-arg>-->
    <!-- </bean>-->

    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <!--<property name="connectionFactory" ref="pooledConnectionFactory" />-->
        <property name="connectionFactory" ref="connectionFactory" />
        <property name="defaultDestination" ref="defaultDestination"></property>
        <property name="receiveTimeout" value="600"></property>
    </bean>

    <!-- this is the Message Driven POJO (MDP) -->
    <bean id="mqSubscriptionService" class="com.ss.crawler.service.impl.MqSubscriptionServiceImpl" />
    <!-- and this is the message listener container -->
    <bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destination" ref="pubAndSubQueueDestination"/>
        <property name="messageListener" ref="mqSubscriptionService" />
    </bean>
</beans>